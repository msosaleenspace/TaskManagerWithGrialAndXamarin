<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:grial="clr-namespace:UXDivers.Grial;assembly=UXDivers.Grial" xmlns:local="clr-namespace:Eleos3"
	WidthRequest="{ StaticResource BadgeSize }"
	HeightRequest="{ StaticResource BadgeSize }"
	x:Class="Eleos3.Badge">
    <ContentView.Content>
        <Grid>
            <BoxView
				x:Name="BadgeShape"
				CornerRadius="{ StaticResource BadgeCornerRadius }" />
            
            <Label
				x:Name="LabelText"
				HorizontalOptions="Center"
				VerticalOptions="Center"
				FontSize="{ StaticResource BadgeFontSize }"
				Style="{ StaticResource LabelBoldStyle }"
				Text="1" />
        </Grid>
	</ContentView.Content>
</ContentView>
